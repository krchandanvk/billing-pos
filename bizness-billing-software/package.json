{
  "name": "bizness-billing-software",
  "version": "1.0.0",
  "description": "Offline-first Hotel & Restaurant Billing POS by Bizness Software",
  "author": "Bizness Software (https://biznessoftware.com)",
  "main": "app/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm:react\" \"npm:electron\"",
    "react": "vite",
    "electron": "electron .",
    "build": "electron-builder",
    "cleanup": "node scripts/cleanup.js"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "sqlite3": "^5.1.7",
