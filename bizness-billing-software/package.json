    "electron-store": "^8.2.0",
    "node-fetch": "^3.3.2",
    "chart.js": "^4.4.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.10",
    "@vitejs/plugin-react": "^4.2.1"
  },
  "build": {
    "appId": "com.biznesssoftware.billing",
    "productName": "Bizness Billing POS",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
